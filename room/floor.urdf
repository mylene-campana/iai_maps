<?xml version="1.0"?>
<robot name="floor">
  <link name="obstacle_base">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <joint name="j_floor" type="fixed">
    <parent link="obstacle_base"/>
    <child link="l_floor"/>
    <origin xyz="0 0 0"/>
  </joint>
        
  <link name="l_floor">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="10 10 0.005"/>
      </geometry>
      <material name="color">
        <color rgba="1 0.9 0.6 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="10 10 0.005"/>
      </geometry>
    </collision>
  </link>

  <joint name="j_wall" type="fixed">
    <parent link="obstacle_base"/>
    <child link="l_wall"/>
    <origin xyz="0 0 0"/>
  </joint>
        
  <link name="l_wall">
    <visual>
      <origin xyz="0 -2.6 1"/>
      <geometry>
        <box size="10 0.005 2"/>
      </geometry>
      <material name="cyan">
        <color rgba="0.5 0.9 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 -2.6 1"/>
      <geometry>
        <box size="10 0.005 2"/>
      </geometry>
    </collision>
  </link>
</robot>
